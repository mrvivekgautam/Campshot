<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">CampShot!</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
				                <img class="img-responsive" src="<%= campshot.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Rs. 9.00/night</h4>
                    <h4><a><%=campshot.name%></a></h4>
                    <p><%= campshot.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campshots/<%= campshot._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campshot.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>